{
  "manifest_version": 3,
  "name": "Postmarks Helper",
  "version": "1.0",
  "description": "A browser extension to send web pages to Postmarks.",
  "permissions": ["activeTab", "contextMenus", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
